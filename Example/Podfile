platform :ios, '8.0'

target 'ApolloExample' do
  use_frameworks!

  # Pods for ApolloExample
  pod 'Apollo', path: '../'

  target 'ApolloTests' do
    inherit! :search_paths
  end

  target 'ApolloPerformanceTests' do
    inherit! :search_paths
  end

  target 'StarWarsAPI' do
    inherit! :search_paths
    # For some reason this is needed to ensure that Apollo.framework is built before StarWarsAPI
    pod 'Apollo', path: '../'
  end

end
